require('dotenv').config();
const express = require('express');
const cors = require('cors');
const multer = require('multer');
const axios = require('axios');
const FormData = require('form-data');
const FatSecretAuth = require('./auth');

const app = express();
const PORT = process.env.PORT || 3000;

// Initialize FatSecret authentication
const fatSecretAuth = new FatSecretAuth(
  process.env.FATSECRET_CLIENT_ID,
  process.env.FATSECRET_CLIENT_SECRET
);

// Middleware
app.use(cors()); // Enable CORS for mobile app
app.use(express.json());

// Log every request for debugging
app.use((req, res, next) => {
  const timestamp = new Date().toISOString();
  const ip = req.ip || req.connection.remoteAddress;
  
  console.log(`\n[${timestamp}] ${req.method} ${req.url}`);
  console.log(`  IP: ${ip}`);
  console.log(`  User-Agent: ${req.get('user-agent') || 'N/A'}`);
  
  // Log response when finished
  res.on('finish', () => {
    console.log(`  Status: ${res.statusCode}`);
  });
  
  next();
});

// Configure multer for handling file uploads (memory storage)
const upload = multer({
  storage: multer.memoryStorage(),
  limits: {
    fileSize: 10 * 1024 * 1024, // 10MB limit
  },
  fileFilter: (req, file, cb) => {
    // Accept only image files
    if (file.mimetype.startsWith('image/')) {
      cb(null, true);
    } else {
      cb(new Error('Only image files are allowed'), false);
    }
  },
});

/**
 * Health check endpoint
 */
app.get('/health', (req, res) => {
  res.json({
    status: 'ok',
    timestamp: new Date().toISOString(),
    service: 'FatSecret API Proxy Server',
  });
});

/**
 * Image recognition endpoint
 * Accepts image upload and forwards to FatSecret Image Recognition v2 API
 */
app.post('/api/recognize-food', upload.single('image'), async (req, res) => {
  try {
    // Validate image upload
    if (!req.file) {
      return res.status(400).json({
        error: 'No image file provided',
        message: 'Please upload an image file',
      });
    }

    console.log(`Processing image: ${req.file.originalname} (${req.file.size} bytes)`);

    // Get valid access token
    const accessToken = await fatSecretAuth.getAccessToken();

    // Convert image to base64
    const imageBase64 = req.file.buffer.toString('base64');

    // Prepare JSON payload for FatSecret Image Recognition v2 API
    const payload = {
      image_b64: imageBase64,
      include_food_data: true,
    };

    // Optional parameters from request body
    if (req.body.region) {
      payload.region = req.body.region;
    }
    if (req.body.language) {
      payload.language = req.body.language;
    }

    // Forward request to FatSecret Image Recognition v2 API
    const response = await axios.post(
      'https://platform.fatsecret.com/rest/image-recognition/v2',
      payload,
      {
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${accessToken}`,
        },
        timeout: 30000, // 30 second timeout
      }
    );    // Return FatSecret response to client
    res.json({
      success: true,
      data: response.data,
    });

  } catch (error) {
    console.error('Error processing image recognition:', error.response?.data || error.message);

    // Handle different error types
    if (error.response) {
      // FatSecret API returned an error
      res.status(error.response.status).json({
        error: 'FatSecret API Error',
        message: error.response.data.error?.message || 'Failed to process image',
        details: error.response.data,
      });
    } else if (error.code === 'ECONNABORTED') {
      // Timeout error
      res.status(504).json({
        error: 'Request Timeout',
        message: 'Image processing took too long',
      });
    } else {
      // Other errors
      res.status(500).json({
        error: 'Internal Server Error',
        message: error.message,
      });
    }
  }
});

/**
 * Get current token status (for debugging)
 */
app.get('/api/token-status', async (req, res) => {
  try {
    const token = await fatSecretAuth.getAccessToken();
    const expiresIn = fatSecretAuth.tokenExpiry 
      ? Math.floor((fatSecretAuth.tokenExpiry - Date.now()) / 1000)
      : 0;

    res.json({
      hasToken: !!token,
      expiresIn: `${expiresIn} seconds`,
      expiryTime: new Date(fatSecretAuth.tokenExpiry).toISOString(),
    });
  } catch (error) {
    res.status(500).json({
      error: 'Failed to check token status',
      message: error.message,
    });
  }
});

/**
 * Force token refresh (for debugging)
 */
app.post('/api/refresh-token', async (req, res) => {
  try {
    fatSecretAuth.clearToken();
    const token = await fatSecretAuth.getAccessToken();
    
    res.json({
      success: true,
      message: 'Token refreshed successfully',
    });
  } catch (error) {
    res.status(500).json({
      error: 'Failed to refresh token',
      message: error.message,
    });
  }
});

// Error handling middleware
app.use((err, req, res, next) => {
  if (err instanceof multer.MulterError) {
    if (err.code === 'LIMIT_FILE_SIZE') {
      return res.status(400).json({
        error: 'File Too Large',
        message: 'Image must be less than 10MB',
      });
    }
  }
  
  console.error('Unhandled error:', err);
  res.status(500).json({
    error: 'Internal Server Error',
    message: err.message,
  });
});

// 404 handler
app.use((req, res) => {
  res.status(404).json({
    error: 'Not Found',
    message: `Route ${req.method} ${req.path} not found`,
  });
});

// Start server
app.listen(PORT, "0.0.0.0", () => {
  console.log(`\nüöÄ FatSecret API Proxy Server running on port ${PORT}`);
  console.log(`üìç Health check: http://localhost:${PORT}/health`);
  console.log(`üçé Image recognition: POST http://localhost:${PORT}/api/recognize-food`);
  console.log(`üîë Token status: http://localhost:${PORT}/api/token-status\n`);
  
  // Validate environment variables
  if (!process.env.FATSECRET_CLIENT_ID || !process.env.FATSECRET_CLIENT_SECRET) {
    console.warn('‚ö†Ô∏è  WARNING: FatSecret credentials not configured in .env file');
    console.warn('‚ö†Ô∏è  Please set FATSECRET_CLIENT_ID and FATSECRET_CLIENT_SECRET\n');
  }
});

module.exports = app;
